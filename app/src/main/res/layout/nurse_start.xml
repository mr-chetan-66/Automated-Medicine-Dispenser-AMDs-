<?xml version="1.0" encoding="utf-8"?>
<!-- activity_nurse_start.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <!-- Top Decoration -->
    <View
        android:id="@+id/decorationTop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decoration"
        android:backgroundTint="@color/md_theme_primary"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Center Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvNurseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:text="Welcome, Nurse"
            android:textAlignment="center"
            style="@style/TextAppearance.App.Title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNurseQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            android:text="Caring with precision, serving with heart"
            android:textAlignment="center"
            style="@style/TextAppearance.App.Subtitle"
            app:layout_constraintTop_toBottomOf="@id/tvNurseTitle" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            style="@style/Widget.App.CardView"
            app:layout_constraintTop_toBottomOf="@id/tvNurseQuote">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key Features for Nurses:"
                    android:textStyle="bold"
                    style="@style/TextAppearance.App.Subtitle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:text="• Efficient medication dispensing management"
                    style="@style/TextAppearance.App.Subtitle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:text="• Track patient medication schedules"
                    style="@style/TextAppearance.App.Subtitle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:text="• Real-time communication with doctors"
                    style="@style/TextAppearance.App.Subtitle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNurseStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Get Started"
        style="@style/Widget.App.Button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
