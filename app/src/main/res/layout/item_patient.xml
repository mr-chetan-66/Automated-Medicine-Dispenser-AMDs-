<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPatientAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_patient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="John Doe"
        android:textColor="@color/md_theme_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvPatientStatus"
        app:layout_constraintStart_toEndOf="@+id/ivPatientAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivPatientAvatar" />

    <TextView
        android:id="@+id/tvPatientDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Room 205 â€¢ Admitted: Feb 20"
        android:textColor="@color/md_theme_text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPatientAvatar"
        app:layout_constraintEnd_toStartOf="@+id/tvPatientStatus"
        app:layout_constraintStart_toEndOf="@+id/ivPatientAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvPatientName" />

    <TextView
        android:id="@+id/tvPatientStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_stats_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Stable"
        android:textColor="#4CAF50"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>