<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvScheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_stats_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="10:30 AM"
        android:textColor="@color/md_theme_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="John Doe - Room 205"
        android:textColor="@color/md_theme_text_primary"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnAdminister"
        app:layout_constraintStart_toEndOf="@+id/tvScheduleTime"
        app:layout_constraintTop_toTopOf="@+id/tvScheduleTime" />

    <TextView
        android:id="@+id/tvMedicationInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Lisinopril 10mg - 1 tablet"
        android:textColor="@color/md_theme_text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvScheduleTime"
        app:layout_constraintEnd_toStartOf="@+id/btnAdminister"
        app:layout_constraintStart_toEndOf="@+id/tvScheduleTime"
        app:layout_constraintTop_toBottomOf="@+id/tvPatientName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdminister"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Administer"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:backgroundTint="@color/md_theme_primary"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>